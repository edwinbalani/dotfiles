# vim: set ft=zsh :
autoload is-at-least
if is-at-least 5.2 "$ZSH_VERSION"; then
    antigen theme romkatv/powerlevel10k
fi

antigen use oh-my-zsh

antigen bundles <<EOB
    asdf
    autojump
    aws
    command-not-found
    common-aliases
    docker
    encode64
    git
    git-extras
    history
    httpie
    jsontools
    lukechilds/zsh-nvm
    pass
    perms
    pip
    pylint
    python
    quote
    sudo
    svn
    systemd
    terraform
    urltools
    vagrant
EOB
# command_exists thefuck && antigen bundle thefuck
command_exists tmuxinator && antigen bundle tmuxinator

antigen bundle zsh-users/zsh-syntax-highlighting  # MUST be the last one
